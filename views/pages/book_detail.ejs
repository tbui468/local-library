<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <head>
      <%- include('../partials/header'); %>
    </head>
    <h2>Title: <%= title %></h2>
    <h3>Author:</h3><a href="<%= book.author.url %>"><%= book.author.name %></a>
    <h3>Summary: <%= book.summary %></h3>
    <h3>ISBN: <%= book.isbn %></h3>
    <h4>Genres</h4>
    <% for(let i = 0; i < book.genre.length; i++) { %>
      <p><%= book.genre[i].name %></p> 
    <% } %>
    <ul>
      <% for(let i = 0; i < copy_list.length; i++) { %>
      <li>
        <p>Status: <%=copy_list[i].status%></p>
        <p>Imprint: <%=copy_list[i].imprint%></p>
        <a href="<%=copy_list[i].url%>">Id: <%=copy_list[i].id%></a>
        <br/>
      </li>
      <% } %>
    </ul>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
